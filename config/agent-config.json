{
  "ai": {
    "provider": "gemini",
    "model": "gemini-2.5-flash",
    "temperature": 0.3,
    "maxTokens": 20000
  },
  "email": {
    "supportInbox": "zach@komplier.co",
    "supportAliases": ["gethelp@komplier.co"],
    "adminEmail": "zach@thecorner.ai",
    "mode": "push_notifications",
    "replyThreading": true,
    "removeMarkdown": true,
    "markAsRead": true
  },
  "mcpServers": {
    "googleWorkspace": {
      "type": "subprocess",
      "command": "uvx",
      "args": ["workspace-mcp"],
      "env": {
        "GOOGLE_OAUTH_CLIENT_ID": "ENV:GOOGLE_OAUTH_CLIENT_ID",
        "GOOGLE_OAUTH_CLIENT_SECRET": "ENV:GOOGLE_OAUTH_CLIENT_SECRET",
        "USER_GOOGLE_EMAIL": "ENV:USER_GOOGLE_EMAIL",
        "GOOGLE_OAUTH_REDIRECT_URI": "ENV:GOOGLE_OAUTH_REDIRECT_URI"
      }
    },
    "supabase": {
      "type": "subprocess", 
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase@latest", "--read-only", "--url=ENV:SUPABASE_URL"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "ENV:SUPABASE_ACCESS_TOKEN",
        "SUPABASE_ANON_KEY": "ENV:SUPABASE_ANON_KEY"
      }
    },
    "stripe": {
      "type": "http",
      "url": "https://mcp.stripe.com"
    }
  },
  "businessRules": {
    "refunds": {
      "autoApproveConditions": {
        "compliantAssetsMax": 5,
        "completedProjectsMax": 0,
        "daysSinceSignupMax": 30
      },
      "refundAmountDefault": 499.00
    },
    "escalation": {
      "aiConfidenceThreshold": 0.3,
      "keywords": ["legal", "complaint", "urgent", "ceo"],
      "sentimentThreshold": -0.8
    },
    "generalResponse": {
      "defaultResponseType": "helpful_info"
    }
  },
  "knowledgeBase": {
    "jsonPath": "../koard/public/JSON_References",
    "files": [
      "App_Context_Guide.json",
      "Global_Asset_Guidelines.json", 
      "Website_Product_Page.json",
      "Press_Release_Copy.json",
      "SEO_Copy.json"
    ]
  },
  "scheduling": {
    "dailyReportTime": "18:00",
    "healthCheckInterval": 300
  },
  "logging": {
    "level": "info",
    "format": "json"
  }
}
